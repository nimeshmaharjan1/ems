generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PRODUCT_CATEGORY {
  LAPTOP
  MOBILE
  TABLET
}

model Product {
  id          String   @id @default(cuid())
  image       String?
  title       String
  description String
  price       String
  category    PRODUCT_CATEGORY
  company     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}